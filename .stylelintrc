{
	"extends": "stylelint-config-standard",
	"plugins": [
		"stylelint-scss"
	],
	"rules": {
		"indentation": "tab",
		"number-leading-zero": null,
		"selector-pseudo-element-colon-notation": "single",
		"at-rule-no-unknown": [ true, {
		  	"ignoreAtRules": [
				"include",
				"mixin",
				"media",
				"import",
				"extend",
				"if",
				"each",
				"content",
				"else",
				"function",
				"debug",
				"return"
		  	]
		}],
	}
}
